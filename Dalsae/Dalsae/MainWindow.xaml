                        <Image.Clip>
                            <RectangleGeometry RadiusX="8" RadiusY="8" Rect="0,0,48,48"/>
                        </Image.Clip>
                    </Image>
                </Grid>
                <Grid Width="85" Focusable="False" Visibility="{Binding Source={StaticResource myOption}, Converter={StaticResource convertPropic}, Path=DataInstence.option.isBigPropic, ConverterParameter=big, Mode=OneWay}">
                    <Image Focusable="False" HorizontalAlignment="Left" Height="73" Margin="4" Grid.RowSpan="2" 
                           Visibility="{Binding Source={StaticResource myOption}, Converter={StaticResource convertPropic}, Path=DataInstence.option.isBigPropic, ConverterParameter=big, Mode=OneWay}"
                           VerticalAlignment="Top" Width="73" OpacityMask="Black" Grid.Column="1" Source="{Binding Converter={StaticResource convertPropic}, ConverterParameter=big, Mode=OneWay}">
                        <Image.Clip>
                            <RectangleGeometry RadiusX="12" RadiusY="12" Rect="0,0,73,73"/>
                        </Image.Clip>
                    </Image>
                </Grid>
            </Grid>
        </ControlTemplate>

