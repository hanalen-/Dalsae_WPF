                    <TextBlock x:Name="labelMentionNoti" Margin="0,2,0,0" Text="새 알림"
                        Foreground="{Binding Source={StaticResource myOption}, Path=DataInstence.skin.menuColor, Mode=OneWay}"
                        Visibility="{Binding Path=notiMention.isOn, ElementName=mainWindow, 
                        Converter={StaticResource boolConverter}, Mode=OneWay}" Height="16" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <TextBlock x:Name="labelDmNoti" Margin="0,20,0,2" Text="새 쪽지"
                        Foreground="{Binding Source={StaticResource myOption}, Path=DataInstence.skin.menuColor, Mode=OneWay}"
                        Visibility="{Binding Path=notiDm.isOn, ElementName=mainWindow, 
                        Converter={StaticResource boolConverter}, Mode=OneWay}" Height="16" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                </Grid>
            </Grid>
            <!--좌측 인장/알림 영역 그리드-->

            <Grid Grid.Column="1"><!--우측 그리드-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <!--입력 박스 그리드-->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <TextBox x:Name="inputTweetBox" Margin="2" TextWrapping="Wrap" AllowDrop="True"
                                    TextChanged="textBox_TextChanged" AcceptsReturn="True" PreviewKeyDown="textBox_PreviewKeyDown"
                                    SelectionChanged="inputTweet_SelectionChanged" Height="60" VerticalAlignment="Top" Drop="inputTweetBox_Drop" PreviewDragOver="inputTweetBox_PreviewDragOver" PreviewDragEnter="inputTweetBox_PreviewDragEnter" PreviewDrop="inputTweetBox_PreviewDrop"/>
                        </Grid>
                        <Grid Grid.Column="1">
                            <TextBlock x:Name="labelCount2" HorizontalAlignment="Right" Margin="0,2,2,0" TextWrapping="Wrap" Text="(0/280)" VerticalAlignment="Center"
                   Foreground="{Binding Source={StaticResource myOption}, Path=DataInstence.skin.menuColor, Mode=OneWay}" Height="16"/>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Button x:Name="button" Content="트윗하기" Margin="0,4,4,4" Grid.Row="2" VerticalAlignment="Top" Width="75" HorizontalAlignment="Right" Click="button_Click" Height="20" Grid.Column="1"/>
                    <TextBlock x:Name="labelCount" HorizontalAlignment="Right" Margin="0,6,84,0" TextWrapping="Wrap" Text="(0/280)" VerticalAlignment="Top"
                   Foreground="{Binding Source={StaticResource myOption}, Path=DataInstence.skin.menuColor, Mode=OneWay}" Height="16"/>
                    <Grid x:Name="imageGrid" Margin="4,2,0,2" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image x:Name="image0" Grid.Column="0" Width="30" Height="30" MouseDown="imageGrid_MouseDown"/>
                        <Image x:Name="image1" Grid.Column="1" Width="30" Height="30" MouseDown="imageGrid_MouseDown"/>
                        <Image x:Name="image2" Grid.Column="2" Width="30" Height="30" MouseDown="imageGrid_MouseDown"/>
                        <Image x:Name="image3" Grid.Column="3" Width="30" Height="30" MouseDown="imageGrid_MouseDown"/>
                    </Grid>
                    <Grid x:Name="gridFind" HorizontalAlignment="Right" Height="24" Margin="0,4,140,0" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}" Width="116">
                        <TextBox x:Name="textBoxFind" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="찾기" VerticalAlignment="Top" Width="88" Margin="1,1,0,1" TextChanged="textBoxFind_TextChanged" PreviewKeyDown="textBoxFind_PreviewKeyDown"/>
                        <Label x:Name="labelClose" Content="X" HorizontalAlignment="Left" Margin="94,-1,0,0" VerticalAlignment="Top" FontWeight="Bold" MouseDown="labelClose_MouseDown"/>
                    </Grid>
                </Grid>
            </Grid>
            <!--우측그리드 종료-->
        </Grid><!--상단영역 그리드-->
        <ListBox x:Name="listBoxIds" Width="auto" HorizontalAlignment="Left" Height="100" Margin="83,64,0,0" Grid.Row="2" Grid.RowSpan="2" VerticalAlignment="Top" Panel.ZIndex="5"
                 ItemTemplate="{StaticResource mentionId}" Visibility="{Binding Path=isShowMentionIds.isOn, ElementName=mainWindow, Converter={StaticResource boolConverter}, Mode=OneWay}" MouseDoubleClick="listBoxMentionIds_DoubleClick"/>


        <Grid x:Name="bottomGrid" Grid.Row="4" Width="auto" HorizontalAlignment="Left" MouseDown="bottomGrid_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" MouseLeftButtonDown="bottomGrid_MouseDown" x:Name="bottomHome"/>
                <ColumnDefinition Width="auto" MouseLeftButtonDown="bottomGrid_MouseDown" x:Name="bottomMention"/>
                <ColumnDefinition Width="auto" MouseLeftButtonDown="bottomGrid_MouseDown" x:Name="bottomDM"/>
                <ColumnDefinition Width="auto" MouseLeftButtonDown="bottomGrid_MouseDown" x:Name="bottomFav"/>
                <ColumnDefinition Width="auto" MouseLeftButtonDown="bottomGrid_MouseDown" x:Name="bottomOpen"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" x:Name="imageHome" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="24" Margin="0,3,0,0" Cursor="Hand"/>
            <TextBlock Grid.Column="0" Margin="26,0,0,0" Text="홈" x:Name="bottomLabelHome"
                 Foreground="{Binding Source={StaticResource myOption}, Path=DataInstence.skin.mention, Mode=OneWay}" VerticalAlignment="Center" Cursor="Hand"/>
            <Image Grid.Column="1" x:Name="imageMention" HorizontalAlignment="Left" Height="24" Grid.Row="3" VerticalAlignment="Top" Width="24" Margin="6,3,0,0" Cursor="Hand"/>
            <TextBlock Grid.Column="1" Margin="32,0,0,0" Text="알림" x:Name="bottomLabelMention"
                 Foreground="{Binding Source={StaticResource myOption}, Path=DataInstence.skin.mention, Mode=OneWay}" VerticalAlignment="Center" Cursor="Hand"/>
            <Image Grid.Column="2" x:Name="imageDm" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="24" Margin="6,3,0,0" Cursor="Hand"/>
            <TextBlock Grid.Column="2" Margin="32,0,0,0" Text="쪽지" x:Name="bottomLabelDM"
                 Foreground="{Binding Source={StaticResource myOption}, Path=DataInstence.skin.mention, Mode=OneWay}" VerticalAlignment="Center" Cursor="Hand"/>
            <Image Grid.Column="3" x:Name="imageFav" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="24" Margin="6,3,0,0" Cursor="Hand"/>
            <TextBlock Grid.Column="3" Margin="32,0,0,0" Text="관심글" x:Name="bottomLabelFav"
                 Foreground="{Binding Source={StaticResource myOption}, Path=DataInstence.skin.mention, Mode=OneWay}" VerticalAlignment="Center" Cursor="Hand"/>
            <Image Grid.Column="4" x:Name="imageOpen" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="24" Margin="6,3,0,0" Cursor="Hand"/>
            <TextBlock Grid.Column="4" Margin="32,0,0,0" Text="최근 연 링크" x:Name="bottomLabelOpen"
                 Foreground="{Binding Source={StaticResource myOption}, Path=DataInstence.skin.mention, Mode=OneWay}" VerticalAlignment="Center" Cursor="Hand"/>
        </Grid>
        <StatusBar x:Name="statusBar" Grid.Row="5" Height="20">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem x:Name="statusTick" Content="(0/60)" Grid.Column="0"/>
            <Separator x:Name="sepaTick" Grid.Column="1"/>
            <StatusBarItem x:Name="statusStream" Content="스트리밍 Off" Visibility="Visible" Grid.Column="2"/>
            <Separator x:Name="sepaStatus" Grid.Column="3" Visibility="Visible"/>
            <StatusBarItem x:Name="statusBlock" Content="차단 목록 가져오는 중" Grid.Column="4"/>
            <Separator x:Name="sepaBlock" Grid.Column="5"/>
            <StatusBarItem x:Name="statusFollow" Content="팔로잉 목록 가져오는 중" Grid.Column="6"/>
            <Separator x:Name="sepaFollow" Grid.Column="7"/>
            <StatusBarItem x:Name="statusRetweet" Content="리트윗 끈 목록 가져오는 중" Grid.Column="8"/>
            <Separator x:Name="sepaRetweet" Grid.Column="9"/>
            <StatusBarItem x:Name="statusHome" Content="홈 가져오는 중" Grid.Column="10"/>
            <Separator x:Name="sepaHome" Grid.Column="11"/>
            <StatusBarItem x:Name="statusMention" Content="멘션 가져오는중" Grid.Column="12"/>
            <Separator x:Name="sepaMention" Grid.Column="13"/>
           

        </StatusBar>
        <Grid x:Name="messageGrid" Grid.Row="1" Visibility="{Binding Path=messageQueue.isShowMessage, ElementName=mainWindow, Converter={StaticResource boolConverter}, Mode=OneWay}" Margin="0,2">
            <TextBlock x:Name="messageLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0" FontSize="14"
                Foreground="{Binding Source={StaticResource myOption}, Path=DataInstence.skin.mention, Mode=OneWay}"
                Text="{Binding Path=messageQueue.message, ElementName=mainWindow, Mode=OneWay}"/>
        </Grid>

        <Grid x:Name="gridPreview" Panel.ZIndex="5" HorizontalAlignment="Right" Height="110" Margin="70,90,0,0" Grid.Row="3" VerticalAlignment="Top" Width="425" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
            <Image x:Name="imagePreview1" HorizontalAlignment="Right" Height="100" VerticalAlignment="Top" Width="100" Margin="0,5,5,0" MaxWidth="100" MaxHeight="100"/>
            <Image x:Name="imagePreview2" HorizontalAlignment="Right" Height="100" VerticalAlignment="Top" Width="100" Margin="0,5,110,0" MaxWidth="100" MaxHeight="100"/>
            <Image x:Name="imagePreview3" HorizontalAlignment="Right" Height="100" VerticalAlignment="Top" Width="100" Margin="0,5,215,0" MaxWidth="100" MaxHeight="100"/>
            <Image x:Name="imagePreview4" HorizontalAlignment="Right" Height="100" VerticalAlignment="Top" Width="100" Margin="0,5,320,0" MaxWidth="100" MaxHeight="100"/>
        </Grid>

    </Grid>

</Window>
