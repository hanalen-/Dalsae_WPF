                <Grid Margin="6,4,0,0" VerticalAlignment="Top">
                    <Image x:Name="image2" Source="{Binding Converter={StaticResource imageConverter}, ConverterParameter=two, Mode=OneWay}" MaxWidth="100" MaxHeight="100"
                               MouseUp="preview_MouseDown" Cursor="Hand">
                        <Image.Clip>
                            <RectangleGeometry RadiusX="12" RadiusY="12" Rect="0,0,100,100"/>
                        </Image.Clip>
                    </Image>
                </Grid>
                <Grid Margin="12,8,0,0" VerticalAlignment="Top">
                    <Image x:Name="image3" Source="{Binding Converter={StaticResource imageConverter}, ConverterParameter=three, Mode=OneWay}" MaxWidth="100" MaxHeight="100"
                               MouseUp="preview_MouseDown" Cursor="Hand">
                        <Image.Clip>
                            <RectangleGeometry RadiusX="12" RadiusY="12" Rect="0,0,100,100"/>
                        </Image.Clip>
                    </Image>
                </Grid>
                <Grid Margin="18,12,0,0" VerticalAlignment="Top">
                    <Image x:Name="image4" Source="{Binding Converter={StaticResource imageConverter}, ConverterParameter=four, Mode=OneWay}" MaxWidth="100" MaxHeight="100"
                               MouseUp="preview_MouseDown" Cursor="Hand">
                        <Image.Clip>
                            <RectangleGeometry RadiusX="12" RadiusY="12" Rect="0,0,100,100"/>
                        </Image.Clip>
                    </Image>
                </Grid>
            </Grid>
        </DataTemplate>
        <!--인장 컨트롤-->
        <ControlTemplate x:Key="imagePropic">
            <Grid Visibility="{Binding Source={StaticResource myOption}, Path=DataInstence.option.isShowPropic,
                            Converter={StaticResource boolConverter}, Mode=OneWay}" Focusable="False">
                <Grid Width="60" Focusable="False" Visibility="{Binding Source={StaticResource myOption}, Converter={StaticResource convertPropic}, Path=DataInstence.option.isBigPropic, ConverterParameter=normal, Mode=OneWay}">
                    <Image Focusable="False" HorizontalAlignment="Left" Height="48" Margin="4" Grid.RowSpan="2" 
                           Visibility="{Binding Source={StaticResource myOption}, Converter={StaticResource convertPropic}, Path=DataInstence.option.isBigPropic, ConverterParameter=normal, Mode=OneWay}"
