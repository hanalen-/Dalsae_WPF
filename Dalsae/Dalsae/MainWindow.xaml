<Window x:Class="Dalsae.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dalsae"
        xmlns:window="clr-namespace:Dalsae.WindowAndControl"
        xmlns:template="clr-namespace:Dalsae.Template"
        mc:Ignorable="d"
        AllowDrop="True"
        Activated="mainWindow_Activated"
        x:Name="mainWindow"
        WindowStartupLocation="Manual"
        PreviewKeyDown="mainWindow_PreviewKeyDown"
        Title="Dalsae" Height="743.613" Width="533.722" MinWidth="200" MinHeight="200" Loaded="Dalsae_Loded" Drop="mainWindow_Drop" Closing="mainWindow_Closing" FontFamily="맑은 고딕" SizeChanged="mainWindow_SizeChanged" LocationChanged="mainWindow_LocationChanged">
