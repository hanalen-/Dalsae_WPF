        <!--ㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜ이미지 미리보기ㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜㅜ-->
        <DataTemplate x:Key="imagePreviewOne">
            <Grid Background="Transparent" Focusable="False" Margin="0,4,0,0"  MouseEnter="Image_MouseEnter" MouseLeave="Image_MouseLeave" MouseMove="Grid_MouseMove" VerticalAlignment="Top"
                  Visibility="{Binding Source={StaticResource myOption}, Path=DataInstence.option.isShowPreview,
                            Converter={StaticResource boolConverter}, Mode=OneWay}">
                <Grid VerticalAlignment="Top">
                    <Image x:Name="image1" Source="{Binding Converter={StaticResource imageConverter}, ConverterParameter=one, Mode=OneWay}" MaxWidth="100" MaxHeight="100"
                               MouseUp="preview_MouseDown" Cursor="Hand">
                        <Image.Clip>
                            <RectangleGeometry RadiusX="12" RadiusY="12" Rect="0,0,100,100"/>
                        </Image.Clip>
                    </Image>
                    <Image x:Name="imagePlay" Source="{Binding bitmapPlay, ElementName=mainWindow}" HorizontalAlignment="Left"  Margin="32,32,0,0" Grid.Row="1" VerticalAlignment="Top" OpacityMask="Black" Width="32" Height="32"
