                <ContentControl Focusable="False" Template="{StaticResource imagePropic}" Grid.Column="1" Grid.RowSpan="3"/>
                <Image Source="{Binding gongSikImage, ElementName=mainWindow}" HorizontalAlignment="Left"  Margin="34,34,4,4" Grid.RowSpan="3" VerticalAlignment="Top" OpacityMask="Black" Width="18" Height="18"  Grid.Column="1"
                            Visibility="{Binding Path=originalTweet.user.verified, Converter={StaticResource boolConverter}, Mode=OneWay}"/>
                <TextBlock FontWeight="Bold" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="Auto" Height="auto"
